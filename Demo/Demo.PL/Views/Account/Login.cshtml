@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


    <div class="main-agileinfo">
        <div class="agileits-top">
            <div asp-validation-summary="All" class = "text-danger">

            </div>
        <form asp-action="Login">
         

             <label> Email </label>
            <input asp-for="Email" placeholder="Enter the email">
            <span asp-validation-for="Email" class="text-danger"></span>
            <br />

             <label> Password </label>
            <input asp-for="Password" placeholder="Enter the password">
            <span asp-validation-for="Password" class="text-danger"></span>
            <br />


            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" class="checkbox">
                    <span>Remeber me</span>
                </label>
                <div class="clear"></div>
            </div>

            <input type="submit" value="SIGNIN">
        </form>

        <p>Don't' have an Account? <a asp-action="Register">SignUp Now!</a></p>
         <p>Forget Password? <a asp-action="ForgetPassword">Reset Now</a></p>


    </div>
</div>


@section validationScripts {
                    <partial name="_ValidationScriptsPartial"></partial>

}
