@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h1>All Roles</h1>
<br />
<br />
<a class = "btn btn-primary" asp-controller="Role" asp-action="Create"> Create Role</a>



<div class ="m-2">
    <form class = "row offset-2" asp-action="Index" method ="get">
        <div class = "col-8">
            <input class ="form-control" type = "text" name = "SearchValue" placeholder = "Search by role name"></input>

        </div>
        <div class = "col-4">
            <input type = "submit" class = "btn btn-outline-dark" value ="Search"></input>
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
                    <table class="table table-striped table-hover mt-3">
                        <thead class="text-center">
                            <th>@Html.DisplayNameFor(r => r.Id)</th>
                            <th>@Html.DisplayNameFor(r => r.Name)</th>
                           
                            <th>Details</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </thead>
                        <tbody class="text-center">
                @foreach (var role in Model)
                {
                            <tr>
                                <td>@Html.DisplayFor(r => role.Id)</td>
                                <td>@Html.DisplayFor(r=> role.Name)</td>
                              
                                <partial name="_ButtonsPartial" model="role.Id" />
                            </tr>


                           <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Role</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                Are you sure you want to delete this Role? 
                              </div>
                              <div class="modal-footer">
                                <form method = "post"  asp-action="ConfrimDelete" asp-route-id="@role.Id" class = "mt-4">
                                    <button type="button" class = "btn btn-secondary" data-bs-dismiss="model"> Close</button>
                                    <input type = "submit" value = "Delete" class=  "btn btn-danger"></input>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>

                }




            

            </tbody>

        </table>
}
else
{
        <div class = "alert alert-info mt-3">
            <h2> No Roles Found !!</h2>
        </div>
}



