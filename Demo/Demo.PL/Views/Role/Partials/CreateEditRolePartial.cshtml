@model RoleViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@



    <form method = "post" asp-controller="User" asp-action=@ViewBag.Action class = "col-8" enctype ="multipart/form-data">

            <div asp-validation-summary="ModelOnly"></div>

            <div class="from-group mb-3">

                 <label class="form-label" asp-for= "Name" >role Name</label>
                <input asp-for="Name" class="form-control"> </input>
                <span asp-validation-for="Name" class="text-danger"></span>
            <div/>



            @if (ViewBag.Action == "Edit" || ViewData["Title"] as string == "Edit")
            {
                    <h3>Assign Users To Roles</h3>
                        <div class="form-group">
                                    @for (int i = 0; i < Model.Users.Count; i++)
                                    {
                                    <div class="form-check">
                                        <input type="hidden" asp-for="Users[i].UserId" />
                                        <input type="hidden" asp-for="Users[i].UserName" />
                                        <input asp-for="Users[i].IsSelected" class="form-check-input" />
                                        <label class="form-check-label">@Model.Users[i].UserName</label>
                                    </div>
                                    }
                        </div>

                    <div class "mt-4 m-auto">
                        <input class="btn btn-success" type = "submit" value= "Edit"></input>
                        <a asp-controller="Role" asp-action="Index" class="btn btn-outline-dark">Back To List</a>
                    </div>
           
            }
            else
            {
                     <div class "mt-4 m-auto">
                    <input class="btn btn-primary" type = "submit" value= "Create"></input>
                    <a asp-controller="Role" asp-action="Index" class="btn btn-outline-dark">Back To List</a>
                </div>

                
            }
    </form>

