@model IEnumerable<EmployeeToReturnDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
            <div aria-live="polite" aria-atomic="true" class="toast-container position-fixed p-3" style="bottom: 25px; right: 25px; z-index: 100;">
                <div class="toast fade show" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <img src="~/imgs/Success.png" class="rounded me-2" width="30" height="30" alt="fav-icon">
                        <strong class="me-auto text-success">Success!!</strong>
                        <small>Just now</small>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                @TempData["Message"]
                    </div>
                </div>
            </div>
}


<h1>All Employees</h1>
<br />
<br />

<a class = "btn btn-primary" asp-controller="Employee" asp-action="Create"> Create Employee</a>


<div class ="m-2">
    <form class = "row offset-2" asp-action="Index" method ="get">
        <div class = "col-8">
            <input class ="form-control" type = "text" name = "SearchValue" placeholder = "Search by Employee Name"></input>

        </div>
        <div class = "col-4">
            <input type = "submit" class = "btn btn-outline-dark" value ="Search"></input>
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table class ="table table-striped table-hover mt-3" >
        <thead class = "text-center">
            <th> @Html.DisplayNameFor(E => E.Image) </th>
            <th> @Html.DisplayNameFor(E=>E.Name) </th>
            <th> @Html.DisplayNameFor(E=>E.Email) </th>
            <th> @Html.DisplayNameFor(E=>E.EmployeeType) </th>
            <th> @Html.DisplayNameFor(E=>E.Age) </th>
            <th> @Html.DisplayNameFor(E=>E.salary) </th>
            <th> @Html.DisplayNameFor(E=>E.Department) </th>
            <th> @Html.DisplayNameFor(E=>E.ISActive) </th>
            <th> @Html.DisplayNameFor(E=>E.Gender) </th>
        
            <th>details</th>
            <th>Update</th>
            <th>Delete</th>
        </thead>
            
        <tbody class = "text-center">
            @foreach(var Employee in Model)
            {
                <tr> 
                    <td> 
                        <img src =  "~/files/images/@(Employee.Image is not null ? Employee.Image : "NotFound.png" )" class = "rounded-circle" width = "40" hight = "40"  alt="Employee image" />
                   </td>
                    <td> @Html.DisplayFor(E => Employee.Name) </td>
                    <td> @Html.DisplayFor(E => Employee.Email) </td>
                    <td> @Html.DisplayFor(E => Employee.EmployeeType) </td>
                    <td> @Html.DisplayFor(E => Employee.Age) </td>
                    <td> @Html.DisplayFor(E => Employee.salary) </td>
                    <td> @Html.DisplayFor(E => Employee.Department) </td>
                    <td> @Html.DisplayFor(E => Employee.ISActive) </td>
                    <td> @Html.DisplayFor(E => Employee.Gender) </td>
                     
                      <partial name = "_ButtonsPartial" model = "@Employee.Id"></partial> 
                 @*    @{
                        Html.RenderPartial("_ButtonsPartial", @Employee.Id);
                    }
                    @Html.Partial("_ButtonsPartial", @Employee.Id); *@

                </tr>
           <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete this Employee? 
              </div>
              <div class="modal-footer">
                <form method = "post"  asp-action="Delete" asp-route-id="@Employee.Id" class = "mt-4">
                    <button type="button" class = "btn btn-secondary" data-bs-dismiss="model"> Close</button>
                    <input type = "submit" value = "Delete" class=  "btn btn-danger"></input>
                </form>
              </div>
            </div>
          </div>
        </div>
        }

        </tbody>

    </table>
}
else
{
    <div class = "alert alert-info mt-3">
        <h2> No Employees Found !!</h2>
    </div>
}


