<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">

             <div class="form-group col-6">
                <label class="col-form-label" asp-for="Id"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>

            <div class="form-group col-6">
                <label class="col-form-label" asp-for="FName">First Name</label>
                <input asp-for="FName" class="form-control" readonly />
            </div>
              <div class="form-group col-6">
                <label class="col-form-label" asp-for="LName">Last Name</label>
                <input asp-for="LName" class="form-control" readonly />
            </div>

            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

        </div>
    </div>

  

        @if (ViewData["Title"] as string == "Details")
        {
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
            <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
            </div>
        }

        else
        {
            <div class="mt-4">
                <form method="post" asp-controller="Employee" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                    <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
                </form>
            </div>

        }

    </div>

    
</div>



