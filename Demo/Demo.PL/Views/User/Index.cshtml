@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h1>All Users</h1>
<br />
<br />



<div class ="m-2">
    <form class = "row offset-2" asp-action="Index" method ="get">
        <div class = "col-8">
            <input class ="form-control" type = "text" name = "SearchValue" placeholder = "Search by User Email"></input>

        </div>
        <div class = "col-4">
            <input type = "submit" class = "btn btn-outline-dark" value ="Search"></input>
        </div>
    </form>
</div>

@if (Model.Count() > 0)
{
                    <table class="table table-striped table-hover mt-3">
                        <thead class="text-center">
                            <th>@Html.DisplayNameFor(e => e.Id)</th>
                            <th>@Html.DisplayNameFor(e => e.FName)</th>
                            <th>@Html.DisplayNameFor(e => e.LName)</th>
                            <th>@Html.DisplayNameFor(e => e.Email)</th>
                            <th>@Html.DisplayNameFor(e => e.Roles)</th>
                            <th>Details</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </thead>
                        <tbody class="text-center">
                @foreach (var user in Model)
                {
                            <tr>
                                <td>@Html.DisplayFor(u => user.Id)</td>
                                <td>@Html.DisplayFor(u => user.FName)</td>
                                <td>@Html.DisplayFor(u => user.LName)</td>
                                <td>@Html.DisplayFor(u => user.Email)</td>
                                <td>@string.Join(", ", user.Roles)</td>
                                <partial name="_ButtonsPartial" model="user.Id" />
                            </tr>

                                         <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                Are you sure you want to delete this User? 
                              </div>
                              <div class="modal-footer">
                                <form method = "post"  asp-action="ConfirmDelete" asp-route-id="@User" class = "mt-4">
                                    <button type="button" class = "btn btn-secondary" data-bs-dismiss="model"> Close</button>
                                    <input type = "submit" value = "Delete" class=  "btn btn-danger"></input>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>

                }


              


            

            </tbody>

        </table>
}
else
{
        <div class = "alert alert-info mt-3">
            <h2> No Users Found !!</h2>
        </div>
}



